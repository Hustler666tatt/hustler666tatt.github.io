<body>
  <div class="card">
    <h1 style="margin:0 0 6px">HUSTLER TATTOO ‚Äî QR</h1>
    <div class="muted">Escane√° para abrir</div>
    <div id="q"></div>
    <button id="dl" class="btn">Descargar PNG</button>
    <div class="muted" style="margin-top:10px">Si cambi√°s la URL, edit√° la constante <code>URL</code> en este archivo.</div>
  </div>

  <!-- QRCode.js (CDN) -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js" integrity="sha512-MpGq5M1o1aYWG9qUo0x1rN9M3b0CPqQyBzQkQ3m0F5s2n7bJgZ7zq8mG+5kG5qJ8k0Kk9rbtzh5M8sg0Vw7Yig==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script>
    // üëá URL de tu landing:
    const URL = "https://hustler666tatt.github.io/";

    const el = document.getElementById('q');
    const qr = new QRCode(el, {
      text: URL,
      width: 300,
      height: 300,
      correctLevel: QRCode.CorrectLevel.H, // mejor tolerancia si peg√°s logo encima
      colorDark: "#000000",
      colorLight: "#ffffff"
    });

    // descargar como PNG
    document.getElementById('dl').onclick = () => {
      // QRCode.js crea un <img> o <canvas> seg√∫n el navegador
      const img = el.querySelector('img');
      const canvas = el.querySelector('canvas');
      let dataURL;
      if (canvas) dataURL = canvas.toDataURL("image/png");
      else if (img) dataURL = img.src;
      const a = document.createElement('a');
      a.href = dataURL;
      a.download = 'hustler-qr.png';
      a.click();
    };
  </script>
